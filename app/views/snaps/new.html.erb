

<%= form_for @snap, :html => { :multipart => true } do |form| %>
  <%= form.file_field :image %>
  <%= form.text_area :description, :placeholder => "Add your description" %>

	<%= form.fields_for @tag do |field| %>
        <%= field.text_area :name, :placeholder => "Add your tags"  %>
	<% end %>

  <%= form.submit "Snap!" %>
<% end %>