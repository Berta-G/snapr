<li class="snap row">
	<article class='medium-6 medium-offset-3 columns panel radius text-center'>
		<%= link_to(image_tag(snap.image.url(:medium), class: 'th radius'), '/snaps/'+snap.id) %>
		<label><%= snap.description %></label>
		<% if !snap.tags.empty? %>
			<div class="row">
				<ul class="small-9 small-centered columns">
					<%= render snap.tags %>
				</ul>
			</div>
		<%end%>
	</article>
</li>
		